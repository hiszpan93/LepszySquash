rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 📁 USERS – nick przypisany do UID
    match /users/{userId} {
      // tylko właściciel dokumentu może czytać i pisać
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 📁 TURNIEJ – statystyki, gracze, mecze itd.
    match /turniej/stats {
      // każdy zalogowany użytkownik może czytać i aktualizować
      allow read, update: if request.auth != null;

      // tylko admin może usuwać dane (np. przycisk „Zresetuj bazę”)
      allow delete: if request.auth != null && request.auth.token.admin == true;

      // zakaz tworzenia nowego dokumentu „stats” z zewnątrz
      allow create: if false;
    }

    // 🔐 Wszystko inne domyślnie zabronione
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

